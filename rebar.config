{cover_enabled, true}.

{deps, [
    {ploutos, ".*", 
        {git, "https://github.com/2ViVe/ploutos.git", {branch, "master"}}},
    {node_package, ".*", 
        {git, "https://github.com/basho/node_package.git", {tag, "1.3.8"}}}
  ]}.

{clean_files, [
    "test/*.beam",
    "erl_crash.dump",
    "dist"
  ]}.

{sub_dirs, ["rel"]}.

{eunit_opts, [verbose, {report, {eunit_surefire, [{dir, "."}]}}]}.

{erl_opts, [
    %warn_missing_spec
]}.

% {plugins, [rebar_lock_deps_plugin]}.

{xref_checks, [undefined_function_calls]}.

{xref_queries, [
    {"((XC - UC) || (XU - X - B))", []},
    {"(L - LU)", []}
  ]}.